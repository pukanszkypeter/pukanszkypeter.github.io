---
import Layout from "../../layouts/Layout.astro";
import { getLangFromUrl } from "../../utils/i18n";

const lang = getLangFromUrl(Astro.url);
const t = await import(`../../i18n/${lang}.json`).then((m) => m.default);
---

<Layout>
  <!-- Hero Section -->
  <section
    id="home"
    class="min-h-screen flex items-center justify-center bg-gradient-to-br from-gray-100 to-gray-200 dark:from-gray-800 dark:to-gray-900"
  >
    <div class="text-center animate-fade-in">
      <h1 class="text-5xl md:text-7xl font-bold text-primary mb-4">
        {t.intro.title}
      </h1>
      <p class="text-2xl md:text-3xl text-secondary mb-6">{t.intro.subtitle}</p>
      <p
        class="text-lg md:text-xl text-gray-600 dark:text-gray-300 max-w-2xl mx-auto"
      >
        {t.intro.description}
      </p>
    </div>
  </section>

  <!-- Introduction Section -->
  <section
    id="introduction"
    class="min-h-screen flex items-center py-20 bg-white dark:bg-gray-900"
  >
    <div class="max-w-4xl mx-auto px-4">
      <h2
        class="text-4xl font-bold text-primary mb-8 text-center animate-slide-up"
      >
        {t.nav.introduction}
      </h2>
      <div
        class="bg-gray-50 dark:bg-gray-800 rounded-lg p-8 shadow-lg animate-fade-in-delay"
      >
        <p class="text-lg text-gray-700 dark:text-gray-300 leading-relaxed">
          {t.intro.description}
        </p>
      </div>
    </div>
  </section>

  <!-- Hobbies Section -->
  <section
    id="hobbies"
    class="min-h-screen flex items-center py-20 bg-gray-50 dark:bg-gray-800"
  >
    <div class="max-w-4xl mx-auto px-4">
      <h2
        class="text-4xl font-bold text-primary mb-8 text-center animate-slide-up"
      >
        {t.hobbies.title}
      </h2>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        {
          t.hobbies.items.map((hobby: string, index: number) => (
            <div
              class={`bg-white dark:bg-gray-700 rounded-lg p-6 shadow-lg animate-fade-in-delay-${index + 1}`}
            >
              <p class="text-lg text-gray-700 dark:text-gray-300">{hobby}</p>
            </div>
          ))
        }
      </div>
    </div>
  </section>

  <!-- Languages Section -->
  <section
    id="languages"
    class="min-h-screen flex items-center py-20 bg-white dark:bg-gray-900"
  >
    <div class="max-w-4xl mx-auto px-4">
      <h2
        class="text-4xl font-bold text-primary mb-8 text-center animate-slide-up"
      >
        {t.languages.title}
      </h2>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        {
          t.languages.items.map((lang: any, index: number) => (
            <div
              class={`bg-gray-50 dark:bg-gray-800 rounded-lg p-6 shadow-lg animate-fade-in-delay-${index + 1}`}
            >
              <h3 class="text-xl font-semibold text-secondary mb-2">
                {lang.name}
              </h3>
              <p class="text-gray-600 dark:text-gray-400">{lang.level}</p>
            </div>
          ))
        }
      </div>
    </div>
  </section>

  <!-- Certificates Section -->
  <section
    id="certificates"
    class="min-h-screen flex items-center py-20 bg-gray-50 dark:bg-gray-800"
  >
    <div class="max-w-4xl mx-auto px-4">
      <h2
        class="text-4xl font-bold text-primary mb-8 text-center animate-slide-up"
      >
        {t.certificates.title}
      </h2>
      <div class="space-y-6">
        {
          t.certificates.items.map((cert: any, index: number) => (
            <div
              class={`bg-white dark:bg-gray-700 rounded-lg p-6 shadow-lg animate-fade-in-delay-${index + 1}`}
            >
              <h3 class="text-xl font-semibold text-secondary mb-2">
                {cert.name}
              </h3>
              <p class="text-gray-600 dark:text-gray-400">
                {cert.issuer} - {cert.year}
              </p>
            </div>
          ))
        }
      </div>
    </div>
  </section>

  <!-- Skills Section -->
  <section
    id="skills"
    class="min-h-screen flex items-center py-20 bg-white dark:bg-gray-900"
  >
    <div class="max-w-6xl mx-auto px-4">
      <h2
        class="text-4xl font-bold text-primary mb-8 text-center animate-slide-up"
      >
        {t.skills.title}
      </h2>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        <!-- Frontend -->
        <div
          class="bg-gray-50 dark:bg-gray-800 rounded-lg p-6 shadow-lg animate-fade-in-delay-1"
        >
          <h3 class="text-2xl font-semibold text-secondary mb-4">
            {t.skills.frontend}
          </h3>
          <ul class="space-y-2">
            {
              t.skills.frontendItems.map((item: string) => (
                <li class="text-gray-700 dark:text-gray-300">• {item}</li>
              ))
            }
          </ul>
        </div>
        <!-- Backend -->
        <div
          class="bg-gray-50 dark:bg-gray-800 rounded-lg p-6 shadow-lg animate-fade-in-delay-2"
        >
          <h3 class="text-2xl font-semibold text-secondary mb-4">
            {t.skills.backend}
          </h3>
          <ul class="space-y-2">
            {
              t.skills.backendItems.map((item: string) => (
                <li class="text-gray-700 dark:text-gray-300">• {item}</li>
              ))
            }
          </ul>
        </div>
        <!-- Tools -->
        <div
          class="bg-gray-50 dark:bg-gray-800 rounded-lg p-6 shadow-lg animate-fade-in-delay-3"
        >
          <h3 class="text-2xl font-semibold text-secondary mb-4">
            {t.skills.tools}
          </h3>
          <ul class="space-y-2">
            {
              t.skills.toolsItems.map((item: string) => (
                <li class="text-gray-700 dark:text-gray-300">• {item}</li>
              ))
            }
          </ul>
        </div>
      </div>
    </div>
  </section>

  <!-- Education Section -->
  <section
    id="education"
    class="min-h-screen flex items-center py-20 bg-gray-50 dark:bg-gray-800"
  >
    <div class="max-w-4xl mx-auto px-4">
      <h2
        class="text-4xl font-bold text-primary mb-8 text-center animate-slide-up"
      >
        {t.education.title}
      </h2>
      <div class="space-y-6">
        {
          t.education.items.map((edu: any, index: number) => (
            <div
              class={`bg-white dark:bg-gray-700 rounded-lg p-6 shadow-lg animate-fade-in-delay-${index + 1}`}
            >
              <h3 class="text-xl font-semibold text-secondary mb-2">
                {edu.degree}
              </h3>
              <p class="text-gray-600 dark:text-gray-400">{edu.school}</p>
              <p class="text-sm text-gray-500 dark:text-gray-500">{edu.year}</p>
            </div>
          ))
        }
      </div>
    </div>
  </section>

  <!-- Experience Section -->
  <section
    id="experience"
    class="min-h-screen flex items-center py-20 bg-white dark:bg-gray-900"
  >
    <div class="max-w-4xl mx-auto px-4">
      <h2
        class="text-4xl font-bold text-primary mb-8 text-center animate-slide-up"
      >
        {t.experience.title}
      </h2>
      <div class="space-y-6">
        {
          t.experience.items.map((exp: any, index: number) => (
            <div
              class={`bg-white dark:bg-gray-700 rounded-lg p-6 shadow-lg animate-fade-in-delay-${index + 1}`}
            >
              <h3 class="text-xl font-semibold text-secondary mb-2">
                {exp.position}
              </h3>
              <p class="text-gray-600 dark:text-gray-400 mb-2">
                {exp.company} - {exp.period}
              </p>
              <p class="text-gray-700 dark:text-gray-300">{exp.description}</p>
            </div>
          ))
        }
      </div>
    </div>
  </section>
</Layout>

<style>
  .animate-fade-in {
    animation: fadeIn 1s ease-in-out;
  }
  .animate-slide-up {
    animation: slideUp 1s ease-out;
  }
  .animate-fade-in-delay {
    animation: fadeIn 1s ease-in-out 0.2s both;
  }
  .animate-fade-in-delay-1 {
    animation: fadeIn 1s ease-in-out 0.2s both;
  }
  .animate-fade-in-delay-2 {
    animation: fadeIn 1s ease-in-out 0.4s both;
  }
  .animate-fade-in-delay-3 {
    animation: fadeIn 1s ease-in-out 0.6s both;
  }

  @keyframes fadeIn {
    from {
      opacity: 0;
    }
    to {
      opacity: 1;
    }
  }

  @keyframes slideUp {
    from {
      transform: translateY(30px);
      opacity: 0;
    }
    to {
      transform: translateY(0);
      opacity: 1;
    }
  }
</style>
